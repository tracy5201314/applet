/**index.wxss**/
.page-index-top{
  position: relative;
  height: 375px;
}
.page-index-top > image{
  width: 100%;
}
.title{
  position: absolute;
  width: 100%;
  height: 33px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  line-height: 33px;
  overflow: hidden;
}
.title image{
  float: left;
  margin-top: 8px;
  margin-left: 14px;
  width: 10px;
  height: 17px;
}
.tab{
  position: absolute;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}
.tab button{
  margin: 0;
  padding: 0;
  width: 90px;
	height: 35px;
	font-size: 15px;
  line-height: 35px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 1px;
  background-color: transparent;
  border-radius: 35px;
	color: #fff;
}
.tab button::after{
  border: none;
}
.tab button.active{
  background-color: #fff;
	box-shadow: -1px 3.5px 5px 0px rgba(0, 0, 0, 0.19);
	color: #659cea;
}

.address{
  position: absolute;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}
.address .img1,.address .img2{
  margin: 15px 26px 0 0;
  width: 29px;
  height: 5px;
}
.address .img1{
  margin: 15px 0 0 26px;
}
.address .change{
  margin: 0 10px;
  width: 36px;
  height: 35px;
}
.address1 text,.address2 text{
  display: block;
  text-align: center;
  font-size: 11px;
  color: #fff;
  line-height: 20px;
}
.address1 text:first-child,.address2 text:first-child{
  font-size: 20px;
  letter-spacing: 2px;
}