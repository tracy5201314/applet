/**index.wxss**/

/* 顶部css */

.page-index-top {
  position: relative;
}

.page-index-top > image {
  width: 100%;
}

.page-index-top .title {
  position: fixed;
  z-index: 20;
  width: 100%;
  height: 33px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  line-height: 33px;
  overflow: hidden;
  transition: all linear 0.3s;
}

.page-index-top .title image {
  float: left;
  margin-top: 8px;
  margin-left: 14px;
  width: 10px;
  height: 17px;
}

.page-index-top .tab {
  position: absolute;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.page-index-top .tab button {
  margin: 0;
  padding: 0;
  width: 90px;
  height: 35px;
  font-size: 15px;
  line-height: 35px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  background-color: transparent;
  border-radius: 35px;
  color: #fff;
}

.page-index-top .tab button::after {
  border: none;
}

.page-index-top .tab button.active {
  background-color: #fff;
  box-shadow: -1px 3.5px 5px 0px rgba(0, 0, 0, 0.19);
  color: #659cea;
  transition: all linear 0.3s;
}

.page-index-top .address {
  position: absolute;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.page-index-top .address .img1, .address .img2 {
  margin: 15px 26px 0 0;
  width: 29px;
  height: 5px;
}

.page-index-top .address .img1 {
  margin: 15px 0 0 26px;
}

.page-index-top .address .change {
  margin: 0 10px;
  width: 36px;
  height: 35px;
}

.page-index-top .address1 text, .page-index-top .address2 text {
  display: block;
  text-align: center;
  font-size: 11px;
  color: #fff;
  line-height: 20px;
}

.page-index-top .address1 text:first-child,
.page-index-top .address2 text:first-child {
  font-size: 20px;
  letter-spacing: 2px;
}

/* 表单css */

.page-index-mid {
  margin-top: -50px;
  padding: 0 14px;
}

.page-index-mid .search-form {
  position: relative;
  z-index: 2;
  padding: 13px 15px;
  background-color: #fff;
  box-shadow: 0px 2px 10px 0px rgba(227, 227, 227, 0.71);
  border-radius: 20px;
}

.page-index-mid .search-form .item {
  padding: 10px 0 6px;
  border-bottom: 1px solid #e3e3e3;
}

.page-index-mid .search-form .item .title {
  margin-bottom: 16px;
  font-size: 15px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #666;
  line-height: 20px;
}

.page-index-mid .search-form .item .title image {
  width: 14px;
  height: 15px;
  vertical-align: -2px;
}

.page-index-mid .search-form .item .title text {
  margin-left: 10px;
}

.page-index-mid .search-form .item .title .text {
  font-size: 11px;
  color: #999;
}

.page-index-mid .search-form .item .title button {
  float: right;
  margin: 5px 0;
  padding: 0;
  width: auto;
  height: 12px;
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  line-height: 12px;
  color: #659cea;
  border: none;
  border-radius: 0;
  background-color: transparent;
}

.page-index-mid .search-form .item .title button::after {
  border: none;
}

.page-index-mid .search-form .item .section .picker {
  height: 27px;
  font-size: 18px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 2px;
  color: #333;
  line-height: 27px;
}

.page-index-mid .search-form .item .status1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 4px;
}

.page-index-mid .search-form .item .status1 view {
  font-size: 13px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #999;
  line-height: 44px;
}

.page-index-mid .search-form .item .status1 view text {
  display: inline-block;
  line-height: 20px;
  vertical-align: middle;
}

.page-index-mid .search-form .item .status1 .picker {
  width: 160px;
  height: 44px;
  background-color: #ffb535;
  border-radius: 22px;
  font-size: 15px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #fff;
  line-height: 44px;
  text-align: center;
  box-shadow: 0px 5px 8px rgba(255, 181, 53, 0.5);
}

.page-index-mid .search-form .item .status2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.page-index-mid .search-form .item .status2 .picker {
  height: 27px;
  font-size: 18px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 2px;
  color: #333;
  line-height: 27px;
}

.page-index-mid .search-form .item .status2 button {
  margin: 0;
  padding: 0;
  width: 41px;
  height: 27px;
  background-color: #ddd;
  border-radius: 14px;
  font-size: 11px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #fff;
  line-height: 27px;
}

.page-index-mid .search-form .item .status2 button::after {
  border: none;
}

.page-index-mid .search-form .airplane-passenger {
  border-bottom: none;
}

.page-index-mid .search-form .personnel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 6px 9px;
  width: 100%;
}

.page-index-mid .search-form .personnel-item {
  width: 90px;
  text-align: center;
}

.page-index-mid .search-form .personnel-item image {
  width: 50px;
  height: 51px;
}

.page-index-mid .search-form .personnel-item view {
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #333;
}

.page-index-mid .search-form .btn-search {
  margin-bottom: -38px;
  width: 100%;
  height: 50px;
  background-color: #659cea;
  border-radius: 25px;
  font-size: 17px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 2px;
  color: #fff;
  line-height: 50px;
}

/* 历史记录css */

.page-index-mid .search-history {
  position: relative;
  z-index: 1;
  margin-top: 45px;
}

.page-index-mid .search-history .title {
  position: relative;
  margin-bottom: 20px;
  width: 100%;
  height: 1px;
  background-color: #e3e3e3;
  text-align: center;
}

.page-index-mid .search-history .title text {
  position: absolute;
  top: -13px;
  left: 50%;
  margin-left: -45px;
  width: 90px;
  height: 27px;
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #999;
  line-height: 27px;
  background-color: #f6f6f6;
}

.page-index-mid .search-history .history-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-bottom: 35px;
}

.page-index-mid .search-history .history-list text {
  margin-left: 10px;
  width: 90px;
  height: 30px;
  background-color: #fff;
  border-radius: 15px;
  border: solid 1px #e3e3e3;
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #999;
  text-align: center;
  line-height: 30px;
}

.page-index-mid .search-history .history-list text:first-child {
  margin-left: 0;
}
