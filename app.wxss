/**app.wxss**/
page{
  height: 100%;
  background-color: #f6f6f6;
}
.page{
  min-height: 100%;
  background-color: #f6f6f6;
}
/* 乘机人类型说明弹窗 css */
.popup-tip{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 98;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.popup-tip-content{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 270px;
	background-image: linear-gradient( rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), 	linear-gradient( #e6e6e6, #e6e6e6);
	background-blend-mode: normal, normal;
	border-radius: 13px;
   transform: translate(-50%, -50%); 
}
.popup-tip-content .title{
  padding: 20px 0 0;
  font-size: 16px;
	font-weight: 700;
	font-stretch: normal;
	line-height: 22px;
	letter-spacing: 0px;
	color: #333333;
  text-align: center;
}
.popup-tip-content .text{
  padding: 0 15px 18px;
  border-bottom: 1px solid #dfdfdf;
  font-size: 13px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20px;
	letter-spacing: 0px;
	color: #666;
}
.popup-tip-content .text view{
  margin-top: 18px;
  font-size: 14px;
  color: #333;
}
.popup-tip-content .btn button{
  font-size: 15px;
  font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
  color: #63a6ee;
  line-height: 44px;
  border-radius: 0;
  border-bottom-left-radius: 13px;
  border-bottom-right-radius: 13px;
}
.popup-tip-content .btn button::after{
  border: none;
}
/* 添加乘客弹窗 css */
.add-passengers-popup{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 98;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  overflow: hidden;  
}
.add-passengers-popup-content{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
	background-color: #ffffff;
	border-radius: 10px 10px 0px 0px;
}
.add-passengers-popup .title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15px;
  height: 20px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}
.add-passengers-popup .title > image{
  width: 20px;
  height: 20px;
}
.add-passengers-popup .title view image{
  margin-right: 10px;
  width: 15px;
  height: 15px;
  vertical-align: -2px;
}
.add-passengers-popup .title view{
  font-size: 15px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 1px;
	color: #333333;
  line-height: 20px;
}
.add-passengers-popup .list{
  padding: 10px 0;
}
.add-passengers-popup .list .list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15px;
  height: 50px;
  border-top: 1px solid #e6e6e6;
}
.add-passengers-popup .list .list-item .info{
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 50px;
}
.add-passengers-popup .list .list-item .info image{
  width: 50px;
  height: 50px;
}
.add-passengers-popup .list .list-item .info .text{
  flex: 1;  
  margin-left: 15px;
  font-size: 13px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 1px;
	color: #333333;
  line-height: 20px;
}
.add-passengers-popup .list .list-item .info .text text{
  color: #999;
}
.add-passengers-popup .list .list-item:first-child{
  border-top: none;
}
.add-passengers-popup .list .list-item .number{
  display: flex;
  flex-direction: row;
  align-items: center; 
}
.add-passengers-popup .list .list-item .number button{
  margin: 0;
  padding: 0;
  width: 20px;
  height: 20px;
  background-color: #649feb;
  border-radius: 4px;
  font-size: 16px;
  color: #fff;
  line-height: 20px;
  text-align: center;
}
.add-passengers-popup .list .list-item .number button::after{
  border: none
}
.add-passengers-popup .list .list-item .number text{
  padding: 0 5px;
  width: 55px;
  font-size: 17px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2px;
	color: #333333;
  text-align: center;
  line-height: 20px;
}